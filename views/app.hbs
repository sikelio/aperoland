<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap@5.3.0-alpha1/bootstrap.min.css">
    <link rel="stylesheet" href="/libs/bootstrap-icons@1.10.2/bootstrap-icons.css">
    <link rel="stylesheet" href="/libs/tom-select@2.2.2/tom-select.bootstrap5.css">
    <link rel="stylesheet" href="/pages/app/app.css">
    <title>Aperoland - App</title>
</head>
<body>
    {{{navbar}}}

    <main class="flex-shrink-0">
        <div class="container control">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addEvent">Créer un apéro</button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#joinEvent">Rejoindre un apéro</button>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row">
                {{#if eventsList}}
                    {{#each eventsList}}
                        <div class="col-xs-12 col-sm-8 col-md-4 col-lg-4 col-xl-4 col-xxl-4 p-2">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{name}}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">{{username}}</h6>
                                    <p class="card-text">{{description}}</p>
                                    <a href="/app/event/{{idEvent}}" class="card-link">Participants</a>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 p-2">
                        <h3 class="text-center">Aucun évenement</h3>
                    </div>
                {{/if}}
            </div>
        </div>
    </main>

    {{{addEvent}}}
    {{{joinEvent}}}

    <script src="/libs/bootstrap@5.3.0-alpha1/bootstrap.bundle.min.js"></script>
    <script src="/libs/bootstrap@5.3.0-alpha1/form-validity.js"></script>
    <script src="/libs/tom-select@2.2.2/tom-select.complete.min.js"></script>
    <script src="/libs/axios/axios.min.js"></script>
    <script src="/pages/app/app.js"></script>
    <script>
        const app = new App;
        app.modalsSelect('#address');
    </script>
</body>
</html>